            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PropertyBathrooms)</div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.PropertyBathrooms, new { htmlAttributes = new { @class = "form-control" } })
