            <div class="col-lg-6">
                @Html.HiddenFor(model => model.SPhoneno, new { Value = @Convert.ToString(Session["SPhone"]) })

            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">

                @{
                    var base64 = Convert.ToBase64String(ViewBag.image);

                    @Html.HiddenFor(model => model.SImage, new { Value = base64 })
                }
            </div>
        </div>

        <div class="form-group" style="margin-left:5%;">
            @Html.LabelFor(a => a.PropertyImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br>
                <input type="file" name="image" id="image" style="margin-left:10%;" />
                @Html.ValidationMessageFor(model => model.PropertyImage, "", new { @class = "text-danger", style = "font-size:0.8vw;color:red;white-space: normal ;resize:none;" })
            </div>
        </div>


        <div class="form-group" style="margin-left:5%;">
            <div class="control-label col-md-2" style="font-weight:bold;">
                HouseImages
            </div>
            <div class="col-md-10">
                <br>
                <input type="file" name="images" id="images" style="margin-left:10%;" multiple="multiple" />
                @Html.ValidationMessageFor(model => model.PropertyImage, "", new { @class = "text-danger", style = "font-size:0.8vw;color:red;white-space: normal ;resize:none;" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                @Html.HiddenFor(model => model.Prop_id, new { Value = @Convert.ToString(Session["P_Id"]) })

            </div>
        </div>
        <div>
            <input type="submit" value="UPDATE" class="btn btn-primary" style="font-size:1.1vw;padding:10px 20px 10px 20px;margin-top:2%;border:none;margin-left:265px;" />
        </div><br>
    </div>
    }
</div>

