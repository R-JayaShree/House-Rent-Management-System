            </div>
        </div>


        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PropertyDescription)</div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.PropertyDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PropertyDescription, "", new { @class = "text-danger", style = "font-size:0.8vw;color:red;white-space: normal ;resize:none;margin-left:8%;" })

            </div>
        </div>


        <div class="row">
            <div class="col-lg-6">
                @Html.HiddenFor(model => model.SellerName, new { Value = @Convert.ToString(Session["Name"]) })

            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                @Html.HiddenFor(model => model.SEmail, new { Value = @Convert.ToString(Session["SEmail"]) })

            </div>
        </div>

