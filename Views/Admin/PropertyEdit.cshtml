@model HouseRentManagementSystem.Models.PropertyTable

@{
    ViewBag.Title = "PropertyEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<style>
    .form-control {
        width: 70%;
        margin-left: 15%;
    }

    .row {
        margin-left: 5%;
    }
</style>
<br>
<legend style="text-align:center;width:60%;margin-left:15%;">EDIT PROPERTY </legend>
<div style="margin-left:23%;font-size:1.1vw;margin-top:0%; ">

    @using (Html.BeginForm("PropertyEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <!--<div style="color:red;margin-left:50px;"></div>-->
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-6">@ViewBag.Message</div>
        </div>
        <div class="row">
            <!--Show details are saved successfully message-->
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PropertyName)</div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.PropertyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PropertyName, "", new { @class = "text-danger", style = "font-size:0.8vw;color:red;white-space: normal ;resize:none;margin-left:8%;" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PropertyType)</div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.PropertyType, new { htmlAttributes = new { @class = "form-control" } })
