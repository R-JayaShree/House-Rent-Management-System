            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Propertyblacony)</div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.Propertyblacony, new { htmlAttributes = new { @class = "form-control" } })
