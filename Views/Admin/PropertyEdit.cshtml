            </div>
        </div>


        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PropertySpecifications)</div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.PropertySpecifications, new { htmlAttributes = new { @class = "form-control" } })
