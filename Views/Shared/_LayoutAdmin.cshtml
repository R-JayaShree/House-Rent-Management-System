<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - House Rent System</title>
    <link rel="icon" href="park.png">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            list-style: none;
            text-decoration: none;
        }

        body {
            background: url("w.jpg");
            background-position: center;
            background-size: cover;
            height: 100vh;
            font-family: sans-serif;
            user-select: none;
        }

        nav .logo {
            color: white;
            font-size: 33px;
            line-height: 70px;
            padding-left: 110px;
        }

        nav {
            height: 70px;
            background: #434343;
            box-shadow: 0 3px 15px rgba(0,0,0,.4);
        }

            nav ul {
                float: right;
                margin-right: 30px;
            }

                nav ul li {
                    display: inline-block;
                }

                    nav ul li a {
                        color: white;
                        display: block;
                        padding: 0 7px;
                        line-height: 70px;
                        font-size: 20px;
                        background: #434343;
                        transition: .5s;
                    }

                        nav ul li a:hover,
                        nav ul li a.active {
                            color: #23dbdb;
                        }

                nav ul ul {
                    position: absolute;
                    top: 85px;
                    border-top: 3px solid #23dbdb;
                    opacity: 0;
                    visibility: hidden;
                }

                nav ul li:hover > ul {
                    top: 70px;
                    opacity: 1;
                    visibility: visible;
                    transition: .3s linear;
                }

                nav ul ul li {
                    display: list-item;
                    position: relative;
                    border: 1px solid #042331;
                    border-top: none;
                    text-align:center;
                }

                    nav ul ul li a {
                        line-height: 50px;
                    }

                nav ul ul ul {
                    border-top: none;
                }
                    nav ul ul ul li {
                        position: relative;
                        top: -70px;
                        left: 150px;
                    }

                nav ul ul li a i {
                    margin-left: 45px;
                }
    </style>
</head>
<body>
    <nav>
        <label class="logo" >House Rent Management System</label>
        <ul>
            <li>@Html.ActionLink("Home", "AIndex", "Admin", new { @class = "navbar-brand-expand" })</li>
            <li>
                @Html.ActionLink("MyProfile", "UserData", "Admin", new { @class = "navbar-brand-expand" })
            </li>
            <li>
                <a href="#">
                    Project Management
                    <i class="fas fa-caret-down"></i>
                </a>
                <ul style=" width: 210px;">
                    <li> @Html.ActionLink("Add Property", "AddProperty", "Admin", new { @class = "navbar-brand-expand" })</li>
                    <li> @Html.ActionLink("View Property", "ViewProperty", "Admin", new { @class = "navbar-brand-expand" })</li>
                </ul>
            </li>
            <li>
                <a href="#">
                    Customers
                    <i class="fas fa-caret-down"></i>
                </a>
                <ul>
                    <li>@Html.ActionLink("Waiting List", "AllRequestedDetails", "Admin", new { @class = "navbar-brand-expand" })</li>
                    <li>@Html.ActionLink("Booked List", "BookedList", "Admin", new { @class = "navbar-brand-expand" })</li>
                </ul>
            </li>
            <li>
                @{
                    if (ViewBag.image != null)
                    {
                        var base64 = Convert.ToBase64String(ViewBag.image);
                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@imgsrc" style="height:50px; width:50px;border-radius:50%;margin-bottom:-20px;vertical-align:unset;">
                    }

                }
            </li>
            <li>
                <a href="#">
                    @Convert.ToString(Session["Name"])
                    <i class="fas fa-caret-down"></i>
                </a>
                <ul style="width:120px;">
                    <li>@Html.ActionLink("TopSellers", "TopSellers", "Admin", new { @class = "navbar-brand-expand" })</li>
                    <li>@Html.ActionLink("LogOut", "Logout", "Account", new { @class = "navbar-brand-expand" })</li>
                </ul>

            </li>
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>